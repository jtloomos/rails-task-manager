<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <ul>
    <li><%= link_to "#{task.title}", "/tasks/#{task.id}" %>  (Completed: <%= task.completed %>) <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
  </ul>
  <% end %>
<br>
<%= link_to "Create new task", new_path %>
